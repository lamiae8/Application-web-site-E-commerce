@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="margin-bottom:40px;">Welcome to S&M-Shop</h1>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <h6 style="color:gray;">Accessoires</h6>
                <img class="d-block w-100" style="height:500px;" src="~/Images/Accessoires.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <h6 style="color:gray;">électronique</h6>
                <img class="d-block w-100" style="height:500px;" src="~/Images/iphones.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <h6 style="color:gray;">electromenager maison</h6>
                <img class="d-block w-100" style="height:500px;" src="~/Images/maison.png" alt="Third slide">
            </div>
            <div class="carousel-item">
                <h6 style="color:gray;">Vetements</h6>
                <img class="d-block w-100"  style="height:500px;" src="~/Images/vetements.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <a asp-controller="Articles" asp-action="Index"><button class="btn btn-link">Voir plus d'articles</button></a>
</div>
