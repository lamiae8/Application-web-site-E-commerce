@model IEnumerable<E_Com.Models.Commande>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create"><button class="btn btn-outline-primary">Ajouter une commande</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dateCommande)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.article)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.article.articleID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.commandeID"><button class="btn btn-warning">Modifier</button></a> |
                <a asp-action="Details" asp-route-id="@item.commandeID"><button class="btn btn-info">Details</button></a> |
                <a asp-action="Delete" asp-route-id="@item.commandeID"><button class="btn btn-danger">Supprimer</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
